<div class="mt-4">
    <h1 class="headding text-center">Sửa khóa học</h1>
    <form action="/course/{{course._id}}?_method=PUT" method="POST">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Name</label>
            <input type="text" class="form-control" value="{{course.name}}" name="name">
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">description</label>
            <textarea class="form-control" name="description">{{course.description}}</textarea>
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">level</label>
            <input type="text" class="form-control" value="{{course.level}}" name="level">
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">videoId</label>
            <input type="text" class="form-control" value="{{course.videoId}}" name="videoId">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>